<% if !params[:search].nil? %>
  <h2> Movie Results for: <%= params[:search] %></h2>
<% else %>
  <h2> Top Rated Movies </h2>
<% end %>

<%= button_to "Discover Page", discover_path, method: :get %><br>

<% @movies.each do |movie| %>
  <div class="movie"><%= link_to "#{movie.title}", movie_path(movie.id) %> Vote Average: <%= "#{movie.vote_average}" %></div>
<% end %>